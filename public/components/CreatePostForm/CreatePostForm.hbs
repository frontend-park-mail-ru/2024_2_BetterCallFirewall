<div class="publish-form">
    <h2 class="publish-form__title">Что у вас нового?</h2>
    <form method="post" class="form" id="formCreatePost">
        {{#each textAreas}}
            {{{this}}}
        {{/each}}
        {{#each inputs}}
            {{{this}}}
        {{/each}}
