<div class="group item" data-key="{{this.key}}">
    <div>
        <a class="link-no-decoration group-avatar" href="">
            <img src="{{this.avatar}}" alt="Avatar" class="group__avatar avatar item__img">
        </a>
    </div>
    <div class="group__info item__info">
        <a class="link" href="" data-key="profileLink"><span>{{this.name}}</span></a>
        <span>{{this.description}}</span>
        <a class="group__link" href="" data-key="writeMessage"><span>написать сообщение</span></a>
    </div>
    <div class="group__state item__state">
    </div>
</div>