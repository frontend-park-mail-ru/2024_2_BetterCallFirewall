<div class="cover" data-section="{{this.section}}">
    <div class="signup">
        <div class="title-sign"><a href="/feed"><h1>Vilka</h1></a></div>
        <div class="name-sign"><h2>Sign Up</h2></div>
        <div class="form-sign">
            <form action="post" class="{{this.className}}" id="{{this.id}}">
                {{#each inputs}}
                    {{{this}}}
                {{/each}}
                {{{button}}}
                <span class="error"></span>
                {{{toLoginLink}}}
            </form>
        </div>
    </div>
</div>
